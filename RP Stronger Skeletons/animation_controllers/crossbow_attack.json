{
    "format_version": "1.10.0",
    "animation_controllers": {
      "controller.animation.creeper.crossbow_attack": {
        "initial_state": "default",
        "states": {
          "default": {
            "transitions": [
              {
                "shooting": "query.is_using_item"
              }
            ]
          },
          "shooting": {
            "animations": [
              "crossbow_shooting"
            ],
            "transitions": [
              {
                "default": "!query.is_using_item"
              }
            ]
          }
        }
      }
    }
  }